%row
  .span8
    %h2 Guest List
  .span1
    = button_to "Add more Guests!", add_guests_path, method: :get, class: "btn btn-primary"

%table.table.table-condensed
  %tr
    %th First name
    %th Last name
    %th Title
    %th Email
    %th Older thank 21?
    %th
    %th
    %th

  - @guests.each do |guest|
    %tr{ class: "#{row_style_for(guest.id, @guests) }" }
      %td= guest.first_name
      %td= guest.last_name
      %td= guest.title
      %td= guest.email
      %td= guest.twenty_one
      %td= link_to 'Show', guest
      %td= link_to 'Edit', edit_guest_path(guest)
      %td= link_to 'Destroy', guest, :method => :delete, :data => { :confirm => 'Are you sure?' }

