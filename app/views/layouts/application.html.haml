    = csrf_meta_tags
  %body
    .navbar
      .navbar-inner
        =link_to "DansTheMan", dashboard_path, {class: "brand"}
        %ul{class: "nav"}
          %li
            =link_to "Guests", guests_path
          %li
            =link_to "Invitations", "#"
          %li
            =link_to "Cool Stuff I don't know about", "#"
          %li
            =link_to "Logout", "users/sign_out", method: :get
    %container
      %row
        .span11
          .notice=notice
          .alert=alert
          = yield
