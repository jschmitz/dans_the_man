%h1 Additional Guests

= form_for @guest, url: "/add_guests/additional_guest", :method => :post  do |f|
  - if @guest.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guest.errors.count, "error")} prohibited this guest from being saved:"
      %ul
        - @guest.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = select_tag(:title, options_for_select(FormalTitle.titles))
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :twenty_one
    = f.check_box :twenty_one
  .field
    = f.label :eighteen
    = f.check_box :eighteen
  .field
    = f.hidden_field :guest_id, { value: session[:guest_id] }
  .actions
    = f.submit 'Add More'
    = f.submit 'Add this one then go to Summary'
    = f.submit 'Go to Summary'
